@model List<Publicador>

<div class="d-flex">
    <h1 class="flex-grow-1">
        Publicadores Pendentes
    </h1>
</div>

<hr>

<form class="row gx-3 gy-2 align-items-center mb-3
" asp-action="Pendentes" asp-controller="Publicadores" method="post" enctype="multipart/form-data">

    <div class="col-sm-4">
        <input class="form-select" name="data" type="month" value="@ViewData["mes"]">
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-primary" type="submit">
            <em class="fas fa-search"></em> Analizar
        </button>
    </div>
    
</form>

<div class="list-group">
    @foreach (var item in Model)
    {
        <a class="list-group-item list-group-item-action d-flex" asp-action="Editar" asp-route-id="@item.">
            <span class='flex-grow-1'>
                @item.Nome - @item.Tipo
            </span>
        </a>
    }
</div>