@model List<Publicador>

<div class="d-flex">
    <h1 class="flex-grow-1">
        Cadastrar Publicador
    </h1>
</div>
<hr>

<form asp-action="Criar" asp-controller="Publicadores" method="post" enctype="multipart/form-data">

    <div class="form-group mb-3">
        Nome
        <input class="form-control" name="nome" type="text">
    </div>

    <div class="form-group mb-3">
        Grupo de Campo
        <select class="form-select" name="grupoDeCampo">
            <option value="">Selecione um Grupo</option>
            <option value="Grupo do Alexandre">Grupo do Alexandre</option>
            <option value="Grupo do Tiago">Grupo do Tiago</option>
        </select>
    </div>

    <div class="form-group mb-3">
        Você é :
        <select class="form-select" name="tipo">
            <option value="0">Publicador não batizado</option>
            <option value="1">Publicador batizado</option>
            <option value="2">Pioneiro Auxiliar</option>
            <option value="3">Pioneiro Regular</option>
        </select>
    </div>

    <div class="d-grid gap-2 mt-3 mb-5">
        <button type="submit" class="btn btn-primary btn-block"><em class="fas fa-arrow-right"></em>
            Cadastrar Publicador</button>
    </div>

</form>