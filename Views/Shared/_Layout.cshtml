<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JWForm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JWForm.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Relatorios" asp-action="Criar">JWForm</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                

                <div class="collapse navbar-collapse" id="navbarResponsive">

                    @if(User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                                    aria-haspopup="true" aria-expanded="false">Publicadores
                                </a>
                                <div class="dropdown-menu">

                                    <a class="dropdown-item" asp-controller="Publicadores" asp-action="Criar">
                                        Cadastrar
                                    </a>

                                    <a class="dropdown-item" asp-controller="Publicadores" asp-action="Listar">
                                        Listar
                                    </a>

                                </div>
                            </li>

                            <li class="nav-item dropdown">

                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                                    aria-haspopup="true" aria-expanded="false">Relatórios
                                </a>
                                <div class="dropdown-menu">
                                    
                                    <a class="dropdown-item" asp-controller="Relatorios" asp-action="Listar">
                                        buscar Relatórios
                                    </a>
                                    
                                    <a class="dropdown-item" asp-controller="Relatorios" asp-action="Criar">
                                        Criar Relatórios
                                    </a>

                                    <a class="dropdown-item" asp-controller="Relatorios" asp-action="Resumo">
                                        Resumo
                                    </a>								

                                </div>

                            </li>
                        </ul>

                        <ul class="navbar-nav ms-md-auto">

                            <li class="nav-item float-right">
                                <a class='nav-link' href='#'>
                                    <small>
                                        Olá, @User.Identity.Name
                                    </small>
                                </a>
                            </li>

                            <li class="nav-item float-right">
                                <a class="nav-link" asp-controller="Home" asp-action="Sair">
                                    <i class="fas fa-sign-out-alt"></i> Sair
                                </a>
                            </li>
                        </ul>
                    }

                    @if(!User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav ms-md-auto">
                            <li class="nav-item float-right">
                                <a class="nav-link" asp-controller="Home" asp-action="login">
                                    <i class="fas fa-sign-out-alt"></i> Entrar
                                </a>
                            </li>
                        </ul>
                    }
				</div>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - JWForm - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
