@model List<Relatorio>

<div class="d-flex">
    <h1 class="flex-grow-1">
        Relatórios
    </h1>
</div>

<hr>

<form class="row gx-3 gy-2 align-items-center mb-5" method='get'>

    <div class="col-sm-3">
        <input class="form-select" name="data" id="selectMes" type="month">
    </div>
    <div class="col-sm-3">
        <select class="form-select" name="publicadorId" id="selectNome" 
            asp-items='(SelectList) ViewData["listaDePublicadores"]'>
            <option value="">Publicadores</option>
        </select>
    </div>
    <div class="col-auto">
        <button class="btn btn-secondary" type="button" id='btnLimpar'>
            <i class="fas fa-redo"></i> Limpar
        </button>
    </div>
    <div class="col-auto">       
        <button class="btn btn-primary" type="submit">
            <em class="fas fa-search"></em> Buscar
        </button>
  </div>
  
</form>

<div class="row align-items-center">
    @foreach (var relatorio in Model)
    {
        
        <div class="col-sm-4">
            <div class="list-group-item list-group-item-action d-flex card mb-5" style="width: 18rem;">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">@relatorio.Publicador.Nome</h6>
                    <h6 class="card-subtitle mb-2 text-muted">@relatorio.Publicador.Tipo</h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Data: @relatorio.Data.ToString("MM-yyyy")</strong></li>
                    <li class="list-group-item">Publicações: @relatorio.Publicacoes</li>
                    <li class="list-group-item">Vídeos: @relatorio.Videos</li>
                    <li class="list-group-item">Revisitas: @relatorio.Revisitas</li>
                    <li class="list-group-item">Estudos: @relatorio.EstudosBiblicos</li>
                    <li class="list-group-item">Horas: @relatorio.Horas</li>
                    <li class="list-group-item">Observações : @relatorio.Observacao</li>
                    <li class="list-group-item">
                        <a asp-action="Editar" asp-route-id="@relatorio.RelatorioId" class="card-link">Editar relatório</a>
                    </li>
                </ul>     
            </div>
        </div>
        
    }
</Div>

@section scripts{
    <script src="~/js/Relatorios/scripts.js" asp-append-version="true"></script>
}