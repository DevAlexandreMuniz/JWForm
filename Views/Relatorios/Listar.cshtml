@model List<Relatorio>

<div class="d-flex">
    <h1 class="flex-grow-1">
        Todos os Relatórios
    </h1>
</div>
<hr>
<div class="row">
    @foreach (var relatorio in Model)
    {
        
        <div class="col-sm-4">
            <a class="list-group-item list-group-item-action d-flex card" style="width: 18rem;" asp-action="Editar" asp-route-id="@relatorio.RelatorioId">
                <div class="card-body">
                    <h5 class="card-title">Relatório de </h5>
                    <h6 class="card-subtitle mb-2 text-muted">@relatorio.Publicador.Nome</h6>
                    <h6 class="card-subtitle mb-2 text-muted">@relatorio.Publicador.Tipo</h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Data: @relatorio.Mes.ToString("MM-yyyy")</strong></li>
                    <li class="list-group-item">Publicações: @relatorio.Publicacoes</li>
                    <li class="list-group-item">Vídeos: @relatorio.Videos</li>
                    <li class="list-group-item">Revisitas: @relatorio.Revisitas</li>
                    <li class="list-group-item">Estudos: @relatorio.EstudosBiblicos</li>
                    <li class="list-group-item">Horas: @relatorio.Horas</li>
                    <li class="list-group-item">Observações : @relatorio.Observacao</li>
                </ul>     
            </a>
        </div>
        
    }
</Div>
